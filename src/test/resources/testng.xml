<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Ebook App Suite" verbose="1" parallel="false">

    <test name="UI Tests">
        <classes>
            <class name="com.ebook_app_render.tests.ui.LoginPageTest"/>
            <class name="com.ebook_app_render.tests.ui.RegisterPageTest"/>
            <class name="com.ebook_app_render.tests.ui.TitlesPageTest"/>
            <class name="com.ebook_app_render.tests.ui.ItemsPageTest"/>
            <class name="com.ebook_app_render.tests.ui.RentsPageTest"/>
        </classes>
    </test>

    <test name="API Tests">
        <packages>
            <package name="com.ebook_app_render.tests.api"/>
        </packages>
    </test>

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

</suite>
